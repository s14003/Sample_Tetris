<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/board_area"
        android:layout_width="240dp"
        android:layout_height="480dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ccc"
        >
        <jp.ac.it_college.std.s14003.tetris.Board
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/score_lanbel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/board_area"
        android:layout_alignTop="@+id/board_area"
        android:text="@string/score"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_lanbel"
        android:layout_toRightOf="@+id/board_area"
        android:text="0"
        android:gravity="right"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/board_area"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="4"
        >
        <ImageButton
            android:id="@+id/left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_menu_revert"
            android:onClick="gameButtonClick"
            android:scaleType="fitCenter" />
        <ImageButton
            android:id="@+id/right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_media_play"
            android:onClick="gameButtonClick"
            android:scaleType="fitCenter" />
        <ImageButton
            android:id="@+id/fall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@android:drawable/arrow_down_float"
            android:onClick="gameButtonClick"
            android:scaleType="fitCenter" />
        <ImageButton
            android:id="@+id/rotate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:onClick="gameButtonClick"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:id="@+id/stop"
        android:layout_marginTop="91dp"
        android:onClick="gameButtonClick"
        android:scaleType="fitCenter"
        android:layout_below="@+id/score"
        android:layout_alignLeft="@+id/score"
        android:layout_alignStart="@+id/score"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        android:id="@+id/restart"
        android:onClick="gameButtonClick"
        android:scaleType="fitCenter"
        android:layout_below="@+id/stop"
        android:layout_alignLeft="@+id/stop"
        android:layout_alignStart="@+id/stop" />
</RelativeLayout>
